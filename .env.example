# AlaeAutomates 2.0 - Environment Configuration
# Copy this file to .env and configure for your environment

# Application Settings
NODE_ENV=production
PORT=3000

# Security Configuration
SESSION_SECRET=your-super-secure-session-secret-here-minimum-32-chars
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# API Configuration
API_BASE_URL=https://alaeautomatesapi.up.railway.app
API_TIMEOUT=30000

# File Upload Limits
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://yourdomain.com/csp-report

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Development Only (remove in production)
ENABLE_CORS_ALL=false
DISABLE_RATE_LIMITING=false